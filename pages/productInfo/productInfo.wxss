page{
  padding-bottom: 100rpx;
}

/* 导航开始 */
.navbar{
  width: 690rpx;
  padding: 30rpx 30rpx 0;
}
.nav-item{
  font-size: 28rpx;
  margin-right: 30rpx;
  height: 60rpx;
  border-bottom: 4rpx solid #fff;
  color: #848484
}
.active{
  border-bottom: 4rpx solid #000;
  font-weight: bold;
  color: #000
}
/* 导航结束 */

/* 内容展示开始 */
.content{
  padding: 30rpx;
  height: 700rpx;
}
.show-image{
  width: 100%;
  height: 300rpx;
  background: #eee;
}
.article{
  margin-top: 20rpx;
  font-size: 28rpx;
  text-align: center;
}
/* 内容展示结束 */
/* 底部按钮开始 */
.home,.share{
  width: 15%;
  font-size: 28rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  border-right: 1rpx solid #ccc;
  font-weight: bold;
  color: #848484;
}
.order{
  width: 70%;
  height: 100%;
  align-items: center;
  text-align: center;
  background: #eee;
  justify-content: center;
}
.order view:nth-child(1){
  font-size: 36rpx;
  color: white;
  font-weight: bold
}
.order view:nth-child(2){
  font-size: 24rpx;
  color: white;
}
/* 底部按钮结束 */