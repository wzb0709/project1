<!-- 大图展示开始 -->
<topShow 
  title='全家福其乐融融款'
  price="￥199"
>
</topShow>
<!-- 大图展示结束 -->
<view style='padding-top:420rpx;'></view>
<!-- 导航开始 -->
<view class='navbar fl-r'>
  <view 
    wx:for="{{nav}}" 
    wx:key="{{index}}" 
    class='nav-item {{currentIndex === index ? "active" : "" }}'
    data-index='{{index}}'
    data-type='{{item.type}}'
    bindtap='handleNavItemClick'
  >
    {{item.navItem}}
  </view>
</view>
<!-- 导航结束 -->

<!-- 内容展示开始 -->
<swiper 
  class='content'
  bindchange='handleSwiperChange'
  current='{{currentIndex}}'
>
  <swiper-item>
    <view class='show-image'>
      <image class='auto-image'></image>
    </view>
    <view class='article'>{{article}}</view>
  </swiper-item>
   <swiper-item>
    <view class='show-image'>
      <image class='auto-image'></image>
    </view>
    <view class='article'>{{article}}</view>
  </swiper-item>
   <swiper-item>
    <view class='show-image'>
      <image class='auto-image'></image>
    </view>
    <view class='article'>{{article}}</view>
  </swiper-item>
</swiper>
<!-- 内容展示结束 -->
<!-- 底部按钮开始 -->
<view class='footer fl-r'>
  <view class='home' bindtap='handleGoHome'>首页</view>
  <view class='share' bindtap='handleGoShare'>分享</view>
  <view class='order fl-c' bindtap='handleGoOrder'>
    <view>立即预约</view>
    <view>预约金:￥69</view>
  </view>
</view>
<!-- 底部按钮结束 -->