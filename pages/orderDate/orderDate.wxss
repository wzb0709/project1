.date-show{
    position: relative;
    width: 250rpx;
    font-family: PingFang-SC-Regular;
    font-size: 34rpx;
    color: #282828;
    text-align: center;
    margin: 20rpx auto 10rpx;
}
.lt-arrow{
  position: absolute;
  top: -15rpx;
  width: 60rpx;
  height: 60rpx;
  padding-right: 0.6rem;
}
.rt-arrow{
  position: absolute;
  top: 5rpx;
  width: 60rpx;
  height: 60rpx;
  padding-right: 0.6rem;
}
.lt-arrow image,.rt-arrow image{
    width: 40rpx;
    height: 40rpx;
}
.lt-arrow{
    left: -85rpx;
    transform: rotate(180deg);
}
.rt-arrow{
    right: -80rpx;
}
.header{
    font-size: 0;
    padding: 0 24rpx;
}
.header>view{
    display: inline-block;
    width: 14.285%;
    color: #333;
    font-size: 30rpx;
    text-align: center;
    padding: 39rpx 0;
}
.weekMark{
    position: relative;
}
.weekMark view{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #22A7F6;
}
.date-box{
    font-size: 0;
    padding: 10rpx 0;
}
.date-box>view{
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #020202;
    font-size: 40rpx;
    text-align: center;
    vertical-align: middle;
    margin: 15rpx 0;
}
.date-head{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
}
.nowDay .date-head{
    width: 60rpx;
    border-radius: 50%;
    text-align: center;
    color: #fff;
    background-color: #22A7F6;
    margin: 0 auto;
}
.date-weight{
    font-size: 22rpx;
    padding: 15rpx 0;
}
.nowDay .date-weight{
    color: #22A7F6;
}
.one{
    position: absolute;
    bottom: 0;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: red;
}
.two{
    position: absolute;
    bottom: 30rpx;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: blue;
}
.dis{
  color: #ccc
}

/* 预约时间开始 */
.choose{
  margin: 0 24rpx;
  height: 275rpx;
  /* background: #eee */
  box-shadow: 0 0 18rpx rgba(176, 212, 221, 0.49)
}
.tip{
  font-size: 28rpx;
  text-align: center;
  color: #888888;
  padding-top: 20rpx;
}
.time{
  padding: 20rpx;
}
.time view{
  font-size: 32rpx;
  padding:10rpx 20rpx;
}
.choosed{
  color: white;
  background: #eee
}
/* 预约时间结束 */